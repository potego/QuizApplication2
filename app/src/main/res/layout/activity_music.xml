<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_geeks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/coder3"
        tools:context="com.example.admin.quizapplication.geeks">

        <TextView
            style="@style/HeaderText"
            android:text="Computer Programming"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/question"
                />


            <TextView
                style="@style/Questions"
                android:id="@+id/textQuiz"
                android:layout_gravity="center_horizontal"
                android:text="1. What is c++"/>


        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_options"
            android:layout_width="match_parent"
            android:background="@drawable/text_style"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/choice1"
                style="@style/CheckBox"
                android:text="java"/>

            <RadioButton
                android:id="@+id/choice2"
                style="@style/CheckBox"
                android:text="c#"/>

            <RadioButton
                android:id="@+id/choice3"
                style="@style/CheckBox"
                android:text="c"/>

            <RadioButton
                android:id="@+id/choice4"
                style="@style/CheckBox"
                android:text="html"/>
        </RadioGroup>

        <Button
            android:id="@+id/nextQuiz"
            style="@style/Button"
            android:text="Next>>"/>

    </LinearLayout>

</ScrollView>



